<%= div_for question do %>
	<h3><%= link_to question.excerpt, question %></h3>
	<div class="status">
		<span class="tags"><%= question.tag_list.map{|tag| content_tag(:a, tag, :href => tagged_url(:tag => tag), :class => 'tag')}.to_sentence.html_safe %></span>
		<span class="bullet"> · </span>
		<span class="history_max"><%= pluralize(question.history_max, "cent") %></span>
		<span class="bullet"> · </span>
		<span class="answer_count"><%= pluralize(question.answers.count, "answer") %></span>
		<span class="bullet"> · </span>
		<span class="timestamp"><%= time_ago_in_words question.created_at %> ago</span>
	</div>
	<%= render 'partials/last_answer', :answer => question.answers.last if question.answers.last.present? %>
<% end %>