= form_for([@answer.question, @answer]) do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    #wmd-button-bar
    = f.text_area :body, :id => 'wmd-input', :class => 'answer_body'
    %span.text-counter
    #wmd-preview
  .actions
    = f.submit
